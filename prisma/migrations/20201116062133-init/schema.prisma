datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  Admin
  Borrower
  Lender
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  role      Role
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
